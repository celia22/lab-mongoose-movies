<div class="celebrities_view_container">

  <h2>Celebrities index</h2>

  <div class="celebrities_card_container">
    {{#each fuckingCelebs}}
    <ul>
      <h3> Celebrity name: {{this.name}}</h3>
      <br>
      <a class="btn" href="/celebrities/{{this.id}}">View details</a>
    </ul>
    <br>
    <form action="/celebrities/{{this.id}}/delete" method="POST">
      <button class="btn" type="submit" style="cursor: pointer;">Delete</button>
    </form>
    {{/each}}
  </div>
  <a class="btn" href="/celebrities/new"> Create a new celebrity</a>
</div>